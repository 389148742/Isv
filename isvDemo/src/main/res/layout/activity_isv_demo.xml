<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dip" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="语音声纹测试"
            android:textSize="30sp" />
    </LinearLayout>
    
    <EditText 
        android:id="@+id/edt_result"
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:maxLines="3"
        android:minLines="3"
        style="@style/textStyle"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户标识："
            style="@style/textStyle"/>
        <TextView 
            android:id="@+id/txt_authorid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            style="@style/textStyle">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/radioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="文本密码" 
                style="@style/textStyle">
            </RadioButton>

            <RadioButton
                android:id="@+id/radioFree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="自由说" 
                android:focusableInTouchMode="false"
                style="@style/textStyle">
            </RadioButton>

            <RadioButton
                android:id="@+id/radioNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="数字密码" 
                style="@style/textStyle">
            </RadioButton>
        </RadioGroup>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/isv_getpassword"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="获取密码" 
            style="@style/textStyle"/>

        <Button
            android:id="@+id/isv_search"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查询模型" 
            style="@style/textStyle"/>

        <Button
            android:id="@+id/isv_delete"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除模型" 
            style="@style/textStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >
            <Button
                android:id="@+id/isv_register"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注册" 
                style="@style/textStyle"/>

            <Button
                android:id="@+id/isv_verify"
                android:layout_width="0.1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="验证" 
                style="@style/textStyle"/>

            <Button
                android:id="@+id/isv_stop_record"
                android:layout_width="0.1dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="停止录音" 
                style="@style/textStyle"/>
    </LinearLayout>
    
    <Button 
        android:id="@+id/isv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="取消注册"
        style="@style/textStyle"/>
 	<TextView
        android:id="@+id/showPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip" 
        style="@style/textStyle"/>
    <TextView
        android:id="@+id/showMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip" 
        style="@style/textStyle"/>
    <TextView
        android:id="@+id/showRegFbk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip" 
        style="@style/textStyle"/>

</LinearLayout>